<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimen_20"
        android:background="@drawable/view_org_pop_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_20"
            android:textColor="@color/dialog_title_color"
            android:textSize="@dimen/dimen_18"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_5"
            android:textColor="@color/c12"
            android:textSize="@dimen/dimen_15" />

        <EditText
            android:id="@+id/et_dialog_input"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/login_et_bg"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="@dimen/dimen_15"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/c8"
            android:textSize="@dimen/dimen_15"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_15">

            <TextView
                android:id="@+id/tv_dialog_confirm"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_50"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10"
                android:gravity="center"
                android:textColor="@color/c12"
                android:textSize="@dimen/dimen_15" />

            <TextView
                android:id="@+id/tv_dialog_cancel"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_50"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_dialog_confirm"
                android:gravity="center"
                android:textColor="@color/c35"
                android:textSize="@dimen/dimen_15"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
