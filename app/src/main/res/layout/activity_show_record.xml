<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main_app_subset_out"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <FrameLayout
        android:id="@+id/window_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50000000"></FrameLayout>

    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/c20"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/c20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/show_recore_cancle"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/cancel"
                android:textColor="@color/c2"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/show_recore_confirm"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:text="确定"
                android:textColor="@color/c2"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/show_recore_curdate"
                android:layout_width="48dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:layout_toLeftOf="@id/show_recore_confirm"
                android:background="@drawable/recruit_current_date_bg"
                android:gravity="center"
                android:text="至今"
                android:textColor="@color/c9"
                android:textSize="14dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.3"
                android:background="@color/c36" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>