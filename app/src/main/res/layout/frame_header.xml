<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/frame_user"
        layout="@layout/frame_user_view" />

    <ImageView
        android:id="@+id/frame_back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_15"
        android:src="@drawable/header_back_icon" />

    <ImageView
        android:id="@+id/frame_focus_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_15" />

    <LinearLayout
        android:id="@+id/ll_fans"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:layout_below="@id/frame_user"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_follow_count"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/icon_frame_follow"
                android:drawablePadding="@dimen/dimen_15"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/color_7f7f7f"
                android:textSize="@dimen/dimen_12" />

        </RelativeLayout>


        <View
            android:layout_width="@dimen/dimen_0.3"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/guide_divider" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/icon_frame_fensi"
                android:drawablePadding="@dimen/dimen_15"
                android:gravity="center"
                android:text="粉丝"
                android:textColor="@color/color_7f7f7f"
                android:textSize="@dimen/dimen_12" />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.3"
        android:layout_below="@id/ll_fans"
        android:background="@color/guide_divider" />
</RelativeLayout>