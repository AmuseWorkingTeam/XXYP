<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c20">

    <RelativeLayout
        android:id="@+id/dialog_operate_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:paddingBottom="@dimen/dimen_11"
        >

        <TextView
            android:id="@+id/dialog_operate_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_15"
            android:maxLines="1"
            android:textSize="@dimen/dimen_15"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_operateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dialog_operate_dec"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_5"
            android:maxLines="1"
            android:textColor="@color/c12"
            android:textSize="@dimen/dimen_17" />
    </RelativeLayout>

    <View
        android:id="@+id/dialog_operator_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.3"
        android:layout_below="@+id/dialog_operate_text_layout"
        android:background="@color/c6" />

</RelativeLayout>