<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_40"
        android:background="@drawable/xxyp_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_16"
        android:gravity="center"
        android:textColor="#ff4b4748"
        android:textSize="@dimen/dimen_13"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_93"
        android:gravity="center"
        android:text="社交账户登录"
        android:textColor="#ffb0b0b0"
        android:textSize="@dimen/dimen_13"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.3"
        android:background="@color/guide_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_weChat"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/dimen_49"
            android:layout_weight="1.0"
            android:src="@drawable/weixin_icon"/>

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/dimen_49"
            android:layout_weight="1.0"
            android:src="@drawable/qq_icon"/>

        <ImageView
            android:id="@+id/iv_weiBo"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/dimen_49"
            android:layout_weight="1.0"
            android:src="@drawable/weibo_icon"/>
    </LinearLayout>
</LinearLayout>